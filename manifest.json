{
    "manifest_version": 3,
    "name": "Amazon Price Tracker",
    "version": "1.0",
    "description": "A Chrome extension to calculate total price and item count in Amazon shopping lists",
    "permissions": ["activeTab", "tabs"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_icon": "images/icon.png",
      "default_title": "Amazon Price Tracker",
      "default_popup": "popup.html"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        }
      }
    }
  }